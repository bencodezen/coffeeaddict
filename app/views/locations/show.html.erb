<div class="container">
  <%= render "header" %>
  <%= render "form" %>

  <div class="row" id="search-results">
    <% count = 0 %>
    <% @nearby_shops.each do |shop| %>
      <% count += 1 %>
      <div class="shop-block">
        <div class="shop-id">
          <p>#<%= count %></p>
        </div>
        <div class="shop-description">
          <h2><%= shop["name"] %></h2>
          <p><%= shop["vicinity"] %></p>
        </div>
      </div>
    <% end %>  
  </div>

</div>